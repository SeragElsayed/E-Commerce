@model Category
@*@Ajax.ActionLink("Create", "Create", new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "ProductTable", InsertionMode = InsertionMode.Replace, OnSuccess = "ToggleCreateModal()" }) |*@

@using (Ajax.BeginForm("Edit", "Category", new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "CategoryTable", InsertionMode = InsertionMode.Replace, OnSuccess = "ToggleEditModal()" }))
{

    @Html.HiddenFor(model => model.Id)
    <div class="form-group">
        <input hidden name="WhatView" value="Edit" />

    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-info" />

        </div>
    </div>
}